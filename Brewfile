
case `uname`.chomp
when 'Darwin'
  tap 'microsoft/git'
  cask 'git-credential-manager-core'

  tap 'burntsushi/ripgrep', 'https://github.com/BurntSushi/ripgrep.git'
  brew 'ripgrep'

  brew 'gh'
  brew 'git-lfs'
  brew 'grepcidr'
  brew 'jq'
  brew 'libyaml'
  brew 'openssl@1.1'
  brew 'powershell'
  brew 'pv'
  brew 'shellcheck'
  brew 'stow'
  brew 'tig'
  brew 'tmux'
  brew 'xxd'
  brew 'zlib'

when 'Linux'

end

brew 'dog'
brew 'kubernetes-cli'
brew 'rustup-init'
brew 'terraform'
