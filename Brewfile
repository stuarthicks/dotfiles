tap 'burntsushi/ripgrep', 'https://github.com/BurntSushi/ripgrep.git'

uname = `uname`

if uname.chomp.eql?('Darwin')
  tap 'microsoft/git'
  cask 'git-credential-manager-core'

  brew 'direnv'
  brew 'exa'
  brew 'git-lfs'
  brew 'go'
  brew 'neovim'
  brew 'node'
  brew 'rust'
  brew 'starship'
  brew 'stow'
end

brew 'dog'
brew 'gh'
brew 'grepcidr'
brew 'kubectl'
brew 'lazygit'
brew 'terraform'
