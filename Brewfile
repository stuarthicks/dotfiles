tap 'burntsushi/ripgrep', 'https://github.com/BurntSushi/ripgrep.git'

uname = `uname`

if uname.chomp.eql?('Darwin')
  brew 'coreutils'
  brew 'git'
  brew 'gnupg'
  brew 'grepcidr'
  brew 'mtr'
  brew 'openssl'
  brew 'pv'
  brew 'reattach-to-user-namespace'
  brew 'starship'
  brew 'stow'
  brew 'tig'
  brew 'tmux'
end

brew 'direnv'
brew 'dog'
brew 'gh'
brew 'git-lfs'
brew 'jq'
brew 'kubectl'
brew 'lazygit'
