case `uname`.chomp
when 'Darwin'
  tap 'homebrew/cask'
  cask 'powershell'

  tap 'microsoft/git'
  cask 'git-credential-manager-core'

  tap 'burntsushi/ripgrep', 'https://github.com/BurntSushi/ripgrep.git'
  brew 'ripgrep'

  tap 'stuarthicks/brews'
  brew 'tstools'

  brew 'cmake'
  brew 'exa'
  brew 'fd'
  brew 'gh'
  brew 'git-lfs'
  brew 'grepcidr'
  brew 'jq'
  brew 'kubernetes-cli'
  brew 'libyaml'
  brew 'lua-language-server'
  brew 'media-info'
  brew 'neovim'
  brew 'openssl@1.1'
  brew 'pv'
  brew 'shellcheck'
  brew 'starship'
  brew 'stow'
  brew 'terraform'
  brew 'tig'
  brew 'tmux'
  brew 'wget'
  brew 'zlib'

when 'Linux'

end
