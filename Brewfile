tap 'burntsushi/ripgrep', 'https://github.com/BurntSushi/ripgrep.git'

uname = `uname`

if uname.chomp.eql?('Darwin')
  tap 'microsoft/git'
  cask 'git-credential-manager-core'

  brew 'libyaml'
  brew 'openssl@1.1'
end

brew 'dog'
brew 'gh'
brew 'grepcidr'
brew 'kubectl'
brew 'lazygit'
brew 'terraform'
