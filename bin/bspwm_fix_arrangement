#!/bin/zsh

# 1. Fix monitor arrangement (manually)
nvidia-settings

# 2. Now tell bspwm
bspc monitor -r I II III IV V VI VII VIII IX X
bspc monitor VGA-0 -d 1 2 3 4 5
bspc monitor DP-1 -d 6 7 8 9 10
bspc config remove_disabled_monitors true
bspc config remove_unplugged_monitors true

eval $(cat $HOME/.fehbg)

compton &!
panel &!
sleep 3 && trayer --monitor 1 --edge top --align left --expand true --transparent true --tint 2d2d2d --alpha 115 &!
