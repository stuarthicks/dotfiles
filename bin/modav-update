#!/bin/zsh

(rbenv each gem install --source "https://gems.cloud.bbc.co.uk" stack-fetcher distribution-config housekeeping-cli) &

(cd "$HOME/src/svn-bbc/AWS-CloudFormation"; svn up) &
(cd "$HOME/src/svn-bbc/BBC-CloudFormation"; svn up) &
(cd "$HOME/src/svn-bbc/modav-scripts"; svn up) &

wait

echo "Done updating"
