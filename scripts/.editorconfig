root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 8

[*.go]
indent_style = tab
indent_size = 8

[*.py]
indent_style = space
indent_size = 4

[*.rb]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2
