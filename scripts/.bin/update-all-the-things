#!/bin/sh

(
  echo 'Updating dotfiles'
  cd ~/.dotfiles && \
    git fetch --all --prune && \
    git pull --ff-only origin master
  echo
)

softwareupdate -a -i
echo

echo 'Updating homebrew'
(
  cd ~/.dotfiles && \
    brew update && \
    brew bundle
)
echo

echo 'Updating Go tools'
go get -v -u \
  github.com/maruel/panicparse/cmd/pp \
  github.com/y0ssar1an/q
echo

echo 'Updating rust'
rustup self update
rustup update
echo
