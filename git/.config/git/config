[core]
	pager = less
	symlinks = true
[branch]
	autosetuprebase = always
[pull]
  ff = only
[push]
	default = current
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[diff "gpg"]
	textconv = gpg --no-tty --decrypt
[url "https://github.com/"]
  insteadOf = "git@github.com:"
[url "https://bithub.brightcove.com/"]
  insteadOf = "git@bithub.brightcove.com:"
[alias]
	abandon-ship = reset --hard HEAD^^
	br = branch
	ci = commit --verbose
	co = checkout
	d = diff --ignore-all-space --ignore-space-change
	ds = diff --ignore-all-space --ignore-space-change --staged
	fe = fetch --all --tags --prune
	s = status
