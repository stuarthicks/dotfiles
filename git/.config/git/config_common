[user]
  name = Stuart Hicks
  email = stuarthicks@users.noreply.github.com
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIJ2odgEamTZm8fkbCwsAmsCQFTz8P/l06yJpniahH4wW

[init]
  defaultBranch = "main"

[core]
  symlinks = true
  hooksPath = ~/.config/git/hooks

[help]
  autocorrect = prompt

[column]
  ui = auto

[branch]
  autosetuprebase = always
  sort = -committerdate

[tag]
  sort = version:refname

[fetch]
  prune = true
  pruneTags = true
  all = true

[pull]
  ff = only

[push]
  default = simple
  autoSetupRemote = true
  followTags = true

[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true

[commit]
  gpgsign = true

[gpg]
  format = ssh

[gpg "ssh"]
  allowedSignersFile = ~/.ssh/allowed_signers

[diff]
  tool = difftastic
  algorithm = histogram
  colormoved = plain
  colormovedws = "allow-indentation-change"
  mnemonicPrefix = true
  renames = true

[diff "gpg"]
  textconv = gpg --no-tty --decrypt

[diff "mp4"]
  textconv = mp4dump --verbosity 3

[diff "ts"]
  textconv = tsreport -v

[difftool]
  prompt = false

[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"

[pager]
  difftool = true

[log]
  abbrevCommit = true
  date = relative

[format]
  pretty = format:%C(yellow)%h %Cblue%>(12)%ad %Cgreen%<(7)%aN%Cred%d %Creset%s

# [blame]
#   ignoreRevsFile = ".git-blame-ignore-revs"

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process

[merge]
  conflictStyle = zdiff3

[rerere]
  enabled = true
  autoUpdate = true

[url "https://github.com/"]
  insteadOf = "git@github.com:"

[url "https://bithub.brightcove.com/"]
  insteadOf = "git@bithub.brightcove.com:"

[alias]
  abandon-ship = reset --hard HEAD^^
  ci = commit --verbose
  co = checkout
  dt = difftool
  dts = difftool --staged
  d = diff --histogram --ignore-all-space --ignore-space-change
  ds = diff --histogram --ignore-all-space --ignore-space-change --staged
  fe = fetch --all --tags --prune
  s = status
  sw = switch
  shove = push --force-with-lease
  staash = stash --all
  jaccuse = blame -w -C -C -C
  bb = !better-git-branch.sh
  desc = branch --edit-description
  cfg = config --list --show-origin
  l = log
  sh = show --ext-diff
  sync = !gh repo sync
  root = rev-parse --show-toplevel

[include]
  path = config_work
