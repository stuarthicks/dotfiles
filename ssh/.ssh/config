Host *
  HashKnownHosts yes
  PreferredAuthentications publickey,keyboard-interactive,password
  VerifyHostKeyDNS yes

# macOS-specific, hold key passphrases in the Keychain app
Host *
  IgnoreUnknown UseKeychain
  UseKeychain yes
  AddKeysToAgent yes

Host *
  Include ~/.ssh/config_private

Host github.com
  User git
